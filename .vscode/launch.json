    "version": "0.2.0",
    "configurations": [
        {
            // See https://code.visualstudio.com/docs/cpp/launch-json-reference
            "name": "Debug WeatherStation",
            "cwd": "${workspaceRoot}",
            "request": "launch",
            "program": "${workspaceRoot}/build/src/WeatherStation",
            "args": [
                "-l",
                "journal"
            ],
            // Use cppdbg when using gdb
            "type": "cppdbg",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerArgs": "",
            "miDebuggerServerAddress": "192.168.50.234:4711",
            //"debugServerPath" : "/usr/bin/gdbserver",
            //"debugServerArgs" : "",
            "targetArchitecture": "arm64",
            "stopAtEntry": false,
            "preLaunchTask": "StartGDBServer",
            "postDebugTask": "StopGDBServer"
        },
        {
            // See https://code.visualstudio.com/docs/cpp/launch-json-reference
            "name": "Debug wu_set_access",
            "cwd": "${workspaceRoot}",
            "request": "launch",
            "program": "${workspaceRoot}/build/src/wu_set_access",
            "args": [
                "-i",
                "TXROANO168",
                "-p",
                "HW0SG8q3"
            ],
            // Use cppdbg when using gdb
            "type": "cppdbg",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerArgs": "",
            "miDebuggerServerAddress": "192.168.50.234:4711",
            //"debugServerPath" : "/usr/bin/gdbserver",
            //"debugServerArgs" : "",
            "targetArchitecture": "arm64",
            "stopAtEntry": false,
            "preLaunchTask": "StartGDBwu_set_access",
            "postDebugTask": "StopGDBwu_set_access"
        }
    ]
}